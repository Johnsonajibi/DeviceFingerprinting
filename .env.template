# QuantumVault Environment Configuration Template
#
# Copy this file to .env and customize the values for your deployment.
# These environment variables provide secure configuration management
# without hard-coding sensitive parameters in the source code.

# === CRYPTOGRAPHIC SETTINGS ===
# Minimum password length (default: 30)
QVAULT_MIN_PASSWORD_LENGTH=30

# Maximum login attempts before lockout (default: 3)
QVAULT_MAX_LOGIN_ATTEMPTS=3

# PBKDF2 iterations for key derivation (default: 600000)
# Higher values provide better security but slower performance
QVAULT_PBKDF2_ITERATIONS=600000

# Salt length in bytes (default: 64, minimum: 32)
QVAULT_SALT_LENGTH=64

# Account lockout duration in seconds (default: 300 = 5 minutes)
QVAULT_LOCKOUT_DURATION=300

# Page size for encryption in KB (default: 1.0)
QVAULT_PAGE_SIZE_KB=1.0

# Kyber key size in bytes (default: 1568)
QVAULT_KYBER_KEY_SIZE=1568

# === SECURITY POLICY ===
# Require security questions with USB tokens (default: true)
QVAULT_REQUIRE_SECURITY_QUESTIONS=true

# Minimum number of security questions (default: 2)
QVAULT_MIN_SECURITY_QUESTIONS=2

# Enable coercion resistance mode (default: true)
QVAULT_COERCION_RESISTANCE=true

# Enable duress code functionality (default: true)
QVAULT_DURESS_CODE=true

# Enable forward-secure encryption (default: true)
QVAULT_FORWARD_SECURE=true

# Enable dynamic page sizing (default: true)
QVAULT_DYNAMIC_PAGE_SIZING=true

# Increment epoch on key rotation (default: true)
QVAULT_EPOCH_INCREMENT=true

# === BACKUP SETTINGS ===
# Number of backups to keep (default: 5)
QVAULT_BACKUP_COUNT=5

# Emergency access delay in hours (default: 24)
QVAULT_EMERGENCY_DELAY_HOURS=24

# Maximum backup tokens (default: 5)
QVAULT_BACKUP_TOKEN_LIMIT=5

# Number of recovery codes to generate (default: 10)
QVAULT_RECOVERY_CODE_COUNT=10

# QR recovery code expiry in days (default: 365)
QVAULT_QR_RECOVERY_EXPIRY_DAYS=365

# === USB TOKEN SETTINGS ===
# USB PIN length (default: 10, minimum: 6)
QVAULT_USB_PIN_LENGTH=10

# Maximum USB PIN attempts (default: 3)
QVAULT_USB_PIN_MAX_ATTEMPTS=3

# === FILE SYSTEM SETTINGS ===
# Data directory for vault files (default: current working directory)
# Use absolute paths for production deployments
# QVAULT_DATA_DIR=/opt/quantumvault/data

# Log directory (default: ./logs)
# QVAULT_LOG_DIR=/var/log/quantumvault

# === PRODUCTION SETTINGS ===
# Enable production mode (affects logging and error handling)
# QVAULT_PRODUCTION_MODE=true

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
# QVAULT_LOG_LEVEL=INFO

# Enable audit logging (default: true in production)
# QVAULT_AUDIT_LOGGING=true

# === NETWORK SETTINGS (if applicable) ===
# Bind address for any network services (default: localhost only)
# QVAULT_BIND_ADDRESS=127.0.0.1

# Network timeout in seconds (default: 30)
# QVAULT_NETWORK_TIMEOUT=30

# === DEPLOYMENT NOTES ===
#
# 1. File Permissions:
#    Set restrictive permissions on this file: chmod 600 .env
#    Ensure only the application user can read it
#
# 2. Docker/Container Deployment:
#    Use environment variables or secrets management
#    Never include .env files in container images
#
# 3. Production Security:
#    Use a secrets management system (HashiCorp Vault, AWS Secrets Manager, etc.)
#    Rotate configurations regularly
#    Monitor access to configuration files
#
# 4. Backup Strategy:
#    Configure QVAULT_DATA_DIR to a secure, backed-up location
#    Ensure backup locations have appropriate permissions
#    Test recovery procedures regularly
#
# 5. Compliance:
#    Adjust settings based on your security requirements
#    Document any changes for audit purposes
#    Ensure settings meet regulatory requirements (GDPR, HIPAA, etc.)
